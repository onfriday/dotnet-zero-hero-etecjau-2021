@using Aula3.WebApp.Controllers;

@model Aula3.WebApp.Models.Produto

@{
	ViewData["Title"] = Model?.Id > 0 ? "Editando produto" : "Novo produto";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-4">
		<form asp-action="@nameof(ProdutosController.Salvar)">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if (Model?.Id > 0)
			{
				<input type="hidden" asp-for="Id" />
			}
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<input asp-for="Nome" class="form-control" />
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Unidade" class="control-label"></label>
				<input asp-for="Unidade" class="form-control" />
				<span asp-validation-for="Unidade" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PesoGramas" class="control-label"></label>
				<input asp-for="PesoGramas" class="form-control" />
				<span asp-validation-for="PesoGramas" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="@(Model?.Id > 0 ? "Salvar" : "Cadastrar")" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="@(nameof(ProdutosController.Index))">Voltar</a>

</div>

@if (Model?.Id > 0)
{
	<div>
		<form asp-action="@(nameof(ProdutosController.Delete))">
			<input type="hidden" asp-for="Id" />
			<input type="submit" value="Delete" class="btn btn-danger" />
		</form>
	</div>
}

@section Scripts {
    @{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
